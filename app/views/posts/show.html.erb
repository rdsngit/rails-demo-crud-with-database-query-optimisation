<h1> Post Details </h1>

<div class="section">

  <p style="text-green-300"><%= notice %></p>

  <%= render @post %>

  <div>
    <strong>Comments</strong>:
    <ul>
      <% @post.comments.each do |comment| %>
        <li><%= link_to comment.name, comment_path(comment) %></li>
      <% end %>
    </ul>
  </div>

  <div>
    <%= link_to "Add Comment", new_comment_path(post_id: @post.id), class: "button" %>
  </div>

  <div>
    <%= link_to "Edit this post", edit_post_path(@post) %> |
    <%= link_to "Back to posts", posts_path %>

    <%= button_to "Destroy this post", @post, method: :delete %>
  </div>

</div>
